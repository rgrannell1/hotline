{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "out",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "out"
  ]
}